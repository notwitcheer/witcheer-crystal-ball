# Witcher's Crystal Ball - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Telegram Bot Configuration
# =============================================================================
# Create a bot via @BotFather on Telegram to get your bot token
# Instructions: https://core.telegram.org/bots#6-botfather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Your Telegram chat ID or channel ID where alerts will be sent
# To get your chat ID:
# 1. Start a chat with your bot
# 2. Send a message
# 3. Visit: https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
# 4. Look for "chat":{"id":123456789}
TELEGRAM_CHAT_ID=your_chat_id_here

# Minimum seconds between alerts to prevent spam (default: 30)
TELEGRAM_MIN_ALERT_INTERVAL_SECONDS=30

# =============================================================================
# Monitoring Configuration
# =============================================================================
# How often to scan for new suspicious activity (in seconds)
SCAN_INTERVAL_SECONDS=60

# Minimum suspicion score (0-100) required to trigger an alert
# Lower = more sensitive (more alerts), Higher = less sensitive (fewer alerts)
ALERT_THRESHOLD_SCORE=60

# Ignore markets with less than this total volume (USD)
MIN_MARKET_VOLUME_USD=1000

# =============================================================================
# Detection Signal Thresholds
# =============================================================================
# Fresh Wallet Detection
DETECTION__FRESH_WALLET_THRESHOLD_DAYS=7
DETECTION__FRESH_WALLET_MIN_TRADES=5
DETECTION__FRESH_WALLET_POSITION_THRESHOLD_USD=500

# Unusual Sizing Detection
DETECTION__LIQUIDITY_THRESHOLD_PCT=0.05
DETECTION__MEDIAN_POSITION_MULTIPLIER=3.0
DETECTION__VOLUME_THRESHOLD_PCT=0.10

# Niche Market Detection
DETECTION__NICHE_MARKET_VOLUME_THRESHOLD_USD=50000
DETECTION__POSITION_DOMINANCE_THRESHOLD_PCT=0.20
DETECTION__RESOLUTION_WINDOW_HOURS=72

# Timing Pattern Detection
DETECTION__LAST_MINUTE_THRESHOLD_HOURS=24
DETECTION__COORDINATION_TIME_WINDOW_MINUTES=30

# Signal Weights (must sum to 100)
DETECTION__WEIGHT_FRESH_WALLET=25
DETECTION__WEIGHT_UNUSUAL_SIZING=20
DETECTION__WEIGHT_NICHE_CONCENTRATION=25
DETECTION__WEIGHT_TIMING_PATTERN=20
DETECTION__WEIGHT_REPEAT_WINNER=10

# =============================================================================
# Polymarket API Configuration
# =============================================================================
# Your Polymarket wallet private key (for authenticated API access)
# To get this: Log into polymarket.com → Profile → Export Private Key
# ⚠️ IMPORTANT: Keep this secure! Only store locally in .env file
POLYMARKET_PRIVATE_KEY=your_private_key_here

# Polygon chain ID (137 for mainnet, 80001 for testnet)
POLYMARKET_CHAIN_ID=137

# API base URLs (usually don't need to change these)
POLYMARKET_CLOB_BASE_URL=https://clob.polymarket.com
POLYMARKET_GAMMA_BASE_URL=https://gamma-api.polymarket.com

# Rate limiting (requests per second) - be respectful to avoid getting blocked
POLYMARKET_REQUESTS_PER_SECOND=2.0
POLYMARKET_RETRY_MAX_ATTEMPTS=3
POLYMARKET_RETRY_BASE_DELAY_SECONDS=1.0
POLYMARKET_TIMEOUT_SECONDS=30.0

# =============================================================================
# Database Configuration
# =============================================================================
# Path to SQLite database file
DATABASE_PATH=data/crystal_ball.db

# =============================================================================
# Logging Configuration
# =============================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Output logs as JSON format (useful for log aggregation tools)
LOG_JSON_FORMAT=false

# =============================================================================
# Market Filtering (Optional)
# =============================================================================
# Comma-separated list of market IDs to ignore
# Example: IGNORED_MARKETS=0xabc123,0xdef456
IGNORED_MARKETS=

# Comma-separated list of event slugs to ignore
# Example: IGNORED_EVENT_SLUGS=presidential-election-2024,super-bowl-2025
IGNORED_EVENT_SLUGS=
